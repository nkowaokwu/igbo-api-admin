{
  "name": "igbo-api-admin",
  "version": "1.0.0",
  "description": "Editor platform for the Igbo API",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build:css": "postcss src/tailwind.css -o src/styles.css",
    "build:app": "node_modules/.bin/babel src -d functions/src --extensions '.ts,.tsx'",
    "build:functions": "node_modules/.bin/babel index.tsx -d functions --extensions '.ts,.tsx'",
    "build:dictionaries": "shx cp -r ./src/backend/dictionaries functions/src/backend",
    "build:server": "yarn build:app && yarn build:copy:html && yarn build:functions && yarn build:client:dev",
    "build:client:dev": "webpack --mode=development",
    "build:client:prod": "webpack --mode=production",
    "build:copy:html": "node_modules/.bin/cpx public/index.html functions",
    "build:dev": "yarn build:css && yarn build:server && yarn build:copy:html && yarn build:dictionaries",
    "functions:env": "node_modules/.bin/firebase functions:config:get > .runtimeconfig.json && shx cp ./.runtimeconfig.json ./functions",
    "start:emulators": "node_modules/.bin/firebase emulators:start --only functions,firestore,hosting,pubsub",
    "prebuild:dev": "node_modules/.bin/firebase functions:config:set runtime.env=\"development\" && yarn functions:env",
    "prebuild": "yarn clean:build && node_modules/.bin/firebase functions:config:set runtime.env=\"production\" && yarn functions:env",
    "build": "yarn build:css && yarn build:server && yarn build:client:prod && yarn build:copy:html && yarn build:dictionaries",
    "clean:build": "shx rm -rf functions/src functions/index.html functions/index.js public/bundle.js*",
    "clean": "yarn clean:build && shx rm -rf node_modules functions/node_modules",
    "predev": "yarn use:staging",
    "dev": "npm-run-all -p start:emulators dev:client dev:server",
    "dev:client": "webpack serve --mode=development",
    "dev:server": "nodemon --watch ./src/backend --watch ./index.tsx --ext js,ts,tsx --exec 'yarn build:dev'",
    "prestart": "node_modules/.bin/firebase functions:config:set runtime.env=\"production\" && yarn functions:env",
    "start": "node_modules/.bin/firebase emulators:start",
    "prestart:database": "[ ! -d \"./db\" ] && shx mkdir ./db || echo 'Database directory exists'",
    "start:database": "mongod --dbpath ./db",
    "mocha": "cross-env NODE_ENV=test mocha --require ts-node/register --require @babel/register --timeout 10000 --exit --retries 2 -r esm ./src/tests",
    "start:docker": "docker-compose -f docker-compose-dev.yml up",
    "start:docker:ci": "docker-compose up",
    "stop:docker": "docker-compose down",
    "use:staging": "firebase use staging",
    "use:prod": "firebase use default",
    "kill:project": "fkill :3000 :5000 :5001 :5002 :9199 :5500 :8081 :8085 :4400 :4000 -fs",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome --headless",
    "pretest": "node_modules/.bin/firebase functions:config:set runtime.env=\"cypress\" && yarn functions:env",
    "test": "yarn use:staging && node_modules/.bin/firebase emulators:exec 'npm-run-all -p -r start:docker:ci cypress:open' --only functions,hosting,pubsub",
    "test:firebase": "yarn use:staging && node_modules/.bin/firebase emulators:exec './node_modules/.bin/jest tests'",
    "test:ci": "node_modules/.bin/firebase emulators:exec 'yarn cypress:run' --only functions,firestore,hosting,pubsub",
    "test:firebase:ci": "node_modules/.bin/firebase emulators:exec './node_modules/.bin/jest tests'",
    "test:jest": "jest",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "<=16"
  },
  "author": "",
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "./src/**/*.ts?(x)": [
      "./node_modules/.bin/eslint --cache"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.13",
    "@chakra-ui/react": "^1.6.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
